@model List<ReviewProductViewModel>
<head>
    <title>Đánh giá sản phẩm</title>
    <style>
        .review-container {
            width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .review-select {
            width: 100%;
            padding: 5px;
        }

        .displayname-textarea {
            width: 50%;
            height: 20px;
            padding: 5px;
            margin-top: 5px;
        }
        .review-textarea {
            width: 100%;
            height: 100px;
            padding: 5px;
        }

        .review-submit-btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .review-submit-btn:hover {
                background-color: #0056b3;
            }

        .form-container {
            display: flex;
            flex-direction: column-reverse;
            justify-content: space-around;
            border: solid 2px black;
            border-radius: 5px;
        }
    </style>
</head>

<div class="review-container" style="height: 800px; overflow-y: scroll;">
    <h2>Đánh giá sản phẩm</h2>
    @for (int i = 0; i < 10; i++)
    {
        <div class="form-container">
            <form method="post" action="ProcessReview">
                @Html.AntiForgeryToken()
                <label for="rating">Sản phẩm: A</label>
                <div class="form-group">
                    <label for="rating">Chọn số sao:</label>
                    <select id="rating" name="rating" class="review-select">
                        <option value="1">1 sao</option>
                        <option value="2">2 sao</option>
                        <option value="3">3 sao</option>
                        <option value="4">4 sao</option>
                        <option value="5">5 sao</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="review">Tên hiển thị:</label>
                    <textarea id="displayName" name="displayName" class="displayname-textarea"></textarea>
                </div>
                <div class="form-group">
                    <label for="review">Nhập đánh giá sản phẩm:</label>
                    <textarea id="review" name="review" class="review-textarea"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="review-submit-btn" value="Submit">
                </div>
            </form>
        </div>
    }
</div>
